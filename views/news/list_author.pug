extends ../layouts/author.pug

block title
    title Lista de noticias

block headstyles
    // Bootstrap CSS
    link(rel='stylesheet', href='/public/assets/vendor/bootstrap/css/bootstrap.min.css')
    link(href='/public/assets/vendor/fonts/circular-std/style.css', rel='stylesheet')
    link(rel='stylesheet', href='/public/assets/libs/css/style.css')
    link(rel='stylesheet', href='/public/assets/vendor/fonts/fontawesome/css/fontawesome-all.css')
    link(rel='stylesheet', type='text/css', href='/public/assets/vendor/datatables/css/dataTables.bootstrap4.css')
    link(rel='stylesheet', type='text/css', href='/public/assets/vendor/datatables/css/buttons.bootstrap4.css')
    link(rel='stylesheet', type='text/css', href='/public/assets/vendor/datatables/css/select.bootstrap4.css')
    link(rel='stylesheet', type='text/css', href='/public/assets/vendor/datatables/css/fixedHeader.bootstrap4.css')

block content
    .container-fluid.dashboard-content
        // ==============================================================
        // pageheader
        // ==============================================================
        .row
            .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
                .page-header
                    h2.pageheader-title Lista de noticias
                    .page-breadcrumb
                        nav(aria-label='breadcrumb')
                            ol.breadcrumb
                                li.breadcrumb-item
                                    a.breadcrumb-link(href='#') Noticias
                                li.breadcrumb-item.active(aria-current='page') Lista de noticias
        // ==============================================================
        // end pageheader
        // ==============================================================
        .row
            // ==============================================================
            // basic table
            // ==============================================================
            .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
                .card
                    h5.card-header Lista de noticias
                    .card-body
                        .table-responsive
                            table.table.table-striped.table-bordered.first
                                thead
                                    tr
                                        th Departamento
                                        th Autor
                                        th Titulo
                                        th Fecha de inicio
                                        th Fecha de terminación
                                        th Acción
                                tbody
                                    each n in news
                                        tr
                                            td #{n.department.name}
                                            if n.author
                                                td #{n.author.name} #{n.author.last_name} 
                                            else
                                                td Sin autor
                                            td #{n.title}
                                            td #{n.start_date.toISOString().split('T')[0]}
                                            td #{n.finish_date.toISOString().split('T')[0]}

                                            td
                                                if n.author.username == user.username 
                                                    a.btn.btn-space.btn-primary(href="/n/edit/" + n._id) Editar
                                                    a.btn.btn-space.btn-secondary(href="/n/delete/" + n._id) Borrar
                                                a.btn.btn-space.btn-success(href="/n/show/" + n.department.name) Mostrar
